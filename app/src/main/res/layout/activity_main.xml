<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/messageArea_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter information below."
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189" />

    <EditText
        android:id="@+id/person_name_text"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/email_text"
        app:layout_constraintTop_toBottomOf="@+id/email_text" />

    <EditText
        android:id="@+id/passwordconf_text"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/password_text"
        app:layout_constraintTop_toBottomOf="@+id/password_text" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordconf_text" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/person_name_text"
        app:layout_constraintTop_toBottomOf="@+id/person_name_text" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#03A9F4"
        app:layout_constraintBaseline_toBaselineOf="@+id/person_name_text"
        app:layout_constraintEnd_toStartOf="@+id/person_name_text" />

    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="Email"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toBottomOf="@+id/email_text"
        app:layout_constraintEnd_toStartOf="@+id/email_text" />

    <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#03A9F4"
        app:layout_constraintBaseline_toBaselineOf="@+id/password_text"
        app:layout_constraintEnd_toStartOf="@+id/password_text" />

    <TextView
        android:id="@+id/password_conf_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:scrollHorizontally="false"
        android:text="Confirm Password"
        android:textColor="#03A9F4"
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordconf_text"
        app:layout_constraintEnd_toStartOf="@+id/passwordconf_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        app:layout_constraintBaseline_toBaselineOf="@+id/person_name_text"
        app:layout_constraintStart_toEndOf="@+id/person_name_text" />

    <TextView
        android:id="@+id/email_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/email_text"
        app:layout_constraintStart_toEndOf="@+id/email_text" />

    <TextView
        android:id="@+id/password_err"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="false"
        android:textColor="#FF0000"
        app:layout_constraintBaseline_toBaselineOf="@+id/password_text"
        app:layout_constraintStart_toEndOf="@+id/password_text" />

    <TextView
        android:id="@+id/password_conf_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#FF0000"
        app:layout_constraintStart_toEndOf="@+id/passwordconf_text"
        app:layout_constraintTop_toTopOf="@+id/passwordconf_text" />

</androidx.constraintlayout.widget.ConstraintLayout>